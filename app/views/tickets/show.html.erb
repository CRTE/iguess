  <h3><%= @ticket.id %> - <%= @ticket.title %></h3>

  Author: <b><%= @ticket.user.first_name %> <%= @ticket.user.last_name %></b> &nbsp; | &nbsp; 
  Type:   <b><%= @ticket.ticket_type.value %></b> &nbsp; | &nbsp;
  Status: <b><%= @ticket.ticket_status.value %></b>
 
<p class="ticket_desc">
  <%= @ticket.description %>
</p>

<h3>Follow ups</h3>
<% @ticket.ticket_follow_ups.each do |follow_up| %>
  <p>
    <strong>Author:</strong>
    <%= follow_up.user.first_name %> <%= follow_up.user.last_name %>
  </p>
 
  <p>
    <strong>Comment:</strong>
    <%= follow_up.description %>
  </p>
<% end %>

<h4>Add a follow up:</h4>
<%= form_for([@ticket, @ticket.ticket_follow_ups.build]) do |f| %>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
 
<%= link_to 'Back', tickets_path %>