<h1>User Details</h1>

<%= simple_form_for @user do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, :label => "Email Address", :required => true, :autofocus => true %>
    <%= f.input :username, :required => true %>

    <%= f.input :first_name, :required => true %>
    <%= f.input :last_name, :required => true %>

    <span>
      <label>&nbsp;</label>
      <%= f.input :approved, :label => "&nbsp;Approved&nbsp;<span class='field-note'><== This box must be checked before user can login!</span>" %>
    </span>

  </div>

  <div class="form-actions">
    <label>&nbsp;</label>
    <%= f.button :submit, "Update" %>
  </div>
<% end %>
