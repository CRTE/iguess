  <% @sector_scenarios.each do |secscen| %>  <%# One table per sector %>
    <hr>
    <label>&nbsp;</label>
    <h2>Consumptions: <%= secscen.co2_sector.name %></h2>

    <label>&nbsp;</label>
    <table class="grid-input zebra">
      <tr>
        <th class="center">Period</th>
        <% @sources_cons.each do |source| %>
          <th class="center"><%= source.name %></th>
        <% end %>
        <th class="total-header center">Total</th>
      </tr>

      <% year = @scenario.base_year %>
      <% @periods.each do |period| %>
        <tr>
          <td><%= year %></td>
          <% @sources_cons.each do |source| %>
            <td>
              <input name="co2_consumptions[<%= period %>][<%= source.id %>][<%= secscen.co2_sector.id %>]" 
                     type="text" value="<%= @consumptions[[period, source.id, secscen.co2_sector.id]].value %>" 
                     onchange="CO2.updateTotal(<%= period %>, <%= secscen.co2_sector.id %>, <%= @sources_cons.size %>); return false;"/>
            </td>
          <% end %>
          <td>
          	<input id="co2_cons_total_<%= period %>_<%= secscen.co2_sector.id %>" type="text" value="0" disabled/>
          </td>
        </tr>
        
        <!-- Invoke Totals function to calculate the sum. -->
        <script>CO2.updateTotal(<%= period %>, <%= secscen.co2_sector.id %>, <%= @sources_cons.size %>);</script>

        <% year += @scenario.time_step %>
      <% end %>
    </table>
  <% end %>

  <label>&nbsp;</label><%= scen.submit buttonText %>
        
<% end %>