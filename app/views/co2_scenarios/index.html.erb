<h1>Scenario list</h1>

<% if flash[:error] %>
  <div class="error-msg"><%= flash[:error] %></div>
<% end %>


<div>
  <% if @co2_scenarios.size == 0 %>
    No Scenarios!
  <% else %>
    <table class="zebra sortable"><tr><th>Name</th><th>Base Year</th><th>Timestep</th></tr>
      <% @co2_scenarios.each do |s| %>
        <tr>
          <td><%= link_to s.name, [:edit, s] %></td>
          <td><%= s.base_year %></td>
          <td><%= s.time_step %></td>
          <td>
          	<%= link_to 'replicate', replicate_co2_scenario_path(s),
     			confirm: "Are you sure you want to replicate this Scenario?\n\n" %>
          </td>
          <td>
          	<%= link_to 'delete', s,
     			confirm: "Deleting a Scenario is a permanent action.\n\n" + 
              "Click OK if you are sure you want to delete this Scenario.", method: :delete %>	
          	</td>
        </tr>
      <% end %>
    </table>
  <% end %> 
</div>

<div>
<%= link_to 'New Scenario', new_co2_scenario_path %>
</div>


